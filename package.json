{
  "name": "proshop-mern-ecommerce-from-scratch",
  "version": "1.0.0",
  "description": "Ecommerce Application build using Mern",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "nodemon backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm start\" \"npm run client\"",
    "data:import": "node backend/seeder",
    "data:destroy": "node backend/seeder -d",
    "build": "npm install && npm install --prefix frontend && npm run build --prefix frontend"
  },
  "author": "Pranav P",
  "license": "ISC",
  "dependencies": {
    "async-handler": "^0.0.3",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.2.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "concurrently": "^8.1.0",
    "dotenv": "^16.1.4",
    "nodemon": "^2.0.22"
  }
}
